<div class="container formulaire">

    <h2>Ecrivez-nous</h2>

  <%= form_for @message, :url => contact_path do |form| %>
    <fieldset class="fields">
      <div class="row-fluid nomEmail">
        <div class="field">
          <%= form.text_field :name, :class => "span6", :style => "float:left;", :placeholder => "Votre Nom"  %>
        </div>
        
        <div class="field">
          <%= form.text_field :email, :class => "span6", :style => "float:right;", :placeholder => "Votre Email"  %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="field">
          <%= form.text_area :body, :class => "span12", :placeholder => "Votre Message", :rows => 10 %>
        </div>
      </div>
    </fieldset>
    
    <fieldset class="actions">
      <%= form.submit "Envoyer", :class => "btn btn-large btn-success", :style => "float:right;" %>
    </fieldset>
  <% end %>

</div>

