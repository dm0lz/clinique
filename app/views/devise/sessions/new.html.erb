<h2>Accès à l'interface Admin</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-signin") do |f| %>
  <div><%#= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "email" %></div>

  <div><%#= f.label :password %>
  <%= f.password_field :password, :placeholder => "password" %></div>



  <div><%= f.submit "Connection", :class => "btn btn-large btn-primary" %></div>
<% end %>



<%= render "devise/shared/links" %>
