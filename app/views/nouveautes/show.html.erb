<p id="notice"><%= notice %></p>

<div data-no-turbolink>

	<div class="span10">

		<% if admin_signed_in? %>
			<div data-no-turbolink>
				<%= link_to 'Editer Article Photos', "/nouveautes/#{@nouveaute.id}/edit", :class => "btn btn-info", :style => "margin-left: 10px;" %>
		    	<%= link_to 'Editer Article Text', "/editor/nouveautes/#{@nouveaute.id}", :class => "btn btn-success", :style => "margin-left: 10px;" %>
		    	<%= link_to 'Destroy', @nouveaute, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :style => "margin-left: 10px;" %>
		    	<br/>
		    	<br/>
			</div>
		<% end %>


		<div class="texteindex">
		    <h1><%= @nouveaute.title %></h1>
		    <div id="content" data-mercury="full" class="mercury-region" data-type="editable"><%= raw(@nouveaute.content) %></div>
		</div>

	</div>

	<div class="span2">
	    <%= image_tag @nouveaute.image_url, :size => "100x100" if @nouveaute.image_url %>
	</div>


</div>


